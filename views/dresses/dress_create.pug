extends ../layout
include ../mixins

block content
	if sessionUser
		if (sessionUser.nickname)
			+menu(sessionUser.nickname)
		else
			+menu(sessionUser.fullname)
	else
		+menu(null)

	.container
		h1 Crear un vestido
		.row
			.col-sm-9
				.row
					a(href='/dresses/mycloset') Regresar
				.row
					if errors
						each error in errors
							p= error
				.row
					if (dress)
						form(method='post' action='/dresses/create')
							+input_readonly('ID vestido', 'text', 'dressId', '', null)
							br
							+input_required('Titulo', 'text', 'title', dress.title, null)
							br
							+input_required('Descripcion', 'text', 'description', dress.description, null)
							br
							label(for='brandId') Marca
							select(name='brandId')
								option('selected' 'disabled') - Seleccione una -
									each brand in brands
										option(selected=(brand.id==dress.brandId) value=brand.id)= brand.title
							br
							label(for='colorId') Color
							select(name='colorId')
								option('selected' 'disabled') - Seleccione uno -
									each color in colors
										option(selected=(color.id==dress.colorId) value=color.id)= color.color
							br
							+input_required('Precio', 'text', 'price', dress.price, null)
							br
							+input_required('Precio Original', 'text', 'priceOriginal', dress.priceOriginal, null)
							br
							+input_readonly('Estado', 'text', 'stateId', dress.stateId, null)
							br
							+input_readonly('ID propietario', 'text', 'userId', dress.userId, null)
							br
							button(type='submit') Grabar

					else
						form(method='post' action='/dresses/create')
							+input_readonly('ID vestido', 'text', 'dressId', '', null)
							br
							+input_required('Titulo', 'text', 'title', null, null)
							br
							+input_required('Descripcion', 'text', 'description', null, null)
							br
							label(for='brandId') Marca
							select(name='brandId')
								option('selected' 'disabled') - Seleccione una -
								each brand in brands
									option(value=brand.id)= brand.title
							br
							label(for='colorId') Color
							select(name='colorId')
								option('selected' 'disabled') - Seleccione uno -
									each color in colors
										option(value=color.id)= color.color
							br
							+input_required('Precio', 'text', 'price', null, null)
							br
							+input_required('Precio Original', 'text', 'priceOriginal', null, null)
							br
							+input_readonly('Estado', 'text', 'stateId', 1, null)
							br
							+input_readonly('ID propietario', 'text', 'userId', sessionUser.id, null)
							br
							button(type='submit') Grabar

			.col-sm-3
				p Publicidad

	+foot


